<%= render "shared/header" %>

<div id="nav">
	<%= render "shared/nav" %>		
</div>

<div id="main">

	<div id="content-full">
		<% if checkrole 'Admin Marketing' %>
		<a class="print btn" href="<%=new_event_path%>"><i class="icon-plus-sign"></i> &nbsp;Tambah</a>
		<% end%>
		
		<% if current_user.owner %>
		<a class="print btn" id="resync" onclick="resyncEvent()"><i class="icon-refresh"></i> &nbsp;Re-Sync</a>
		<% end %>

		<a class="print btn" id="help"><i class="icon-question-sign"></i></a>
		<div id="legend" style="width: 180px;
			background: white;
			padding: 1rem;
			border-radius: 0.8rem;
			line-height: 1.25;
			position: absolute;
			right: 0;
			margin-right: 3rem;
			margin-top: 2.5rem;
			z-index: 9;
			display: none;">
			<strong>Indikator</strong>
			<ul style="padding: 0;">
				<li style="list-style: none;"><div style="display: flex; gap: 6px;"><span class="fc-event" style="width:10px; height:10px; display: block; border-radius: 10px;"></span> Belum dikerjakan.</div></li>
				<li style="list-style: none;"><div style="display: flex; gap: 6px;"><span class="fc-event handled" style="width:10px; height:10px; display: block; border-radius: 10px;"></span> Sedang dikerjakan</div></li>
				<li style="list-style: none;"><div style="display: flex; gap: 6px;"><span class="fc-event half_completed" style="width:10px; height:10px; display: block; border-radius: 10px;"></span> Selesai 1/2</div></li>
				<li style="list-style: none;"><div style="display: flex; gap: 6px;"><span class="fc-event completed" style="width:10px; height:10px; display: block; border-radius: 10px;"></span> Selesai</div></li>
				<li style="list-style: none;"><div style="display: flex; gap: 6px;"><span class="fc-event invoiced" style="width:10px; height:10px; display: block; border-radius: 10px;"></span> Surat Jalan </div></li>
				<li style="list-style: none;"><div style="display: flex; gap: 6px;"><span class="fc-event taxinvoiced" style="width:10px; height:10px; display: block; border-radius: 10px;"></span> Invoice Tagihan</div></li>
				<li style="list-style: none;"><div style="display: flex; gap: 6px;"><span class="fc-event completed_by_vendor" style="width:10px; height:10px; display: block; border-radius: 10px;"></span> Vendor</div></li>
				<li style="list-style: none;"><div style="display: flex; gap: 6px;"><span class="fc-event cancelled" style="width:10px; height:10px; display: block; border-radius: 10px;"></span> Dibatalkan</div></li>
				<li style="list-style: none;"><div style="display: flex; gap: 6px;"><span class="fc-event" style="background: pink; border: 1px solid pink; width:10px; height:10px; display: block; border-radius: 10px;"></span> Ada DP</div></li>
				<li style="list-style: none;"><div style="display: flex; gap: 6px;"><span class="fc-event" style="background: #e600ff; border: 1px solid #e600ff; width:10px; height:10px; display: block; border-radius: 10px;"></span> Ada Stapel</div></li>
			</ul>
		</div>
		
        <% if params[:type] %>
        <h1><a href="<%=events_path%>">Kalendar Event</a> / <a href="<%=events_path + '?type=cancelled' %>">DO Ditolak</a> / Index</h1>
        <% else %>
		<h1><a href="<%=events_path%>">Kalendar Event</a> / Index</h1>
        <% end%>

		<input type="hidden" id="arrayevents" />
		
		<br class="clearfix" />
				
		<div id='calendar2' class='<%=params[:type]%>'></div>

		<br class="clearfix" />
        
        <div class="loader main-dashboard d-block" style="margin:3rem auto 0 auto;"></div>
	</div>

</div>