<%= render "shared/header" %>

<div id="nav">
	<%= render "shared/nav" %>
</div>

<div id="main">

	<div id="content-full">
		<h1>Pelabuhan</h1>
		<a class="btn-txt right" href="<%=new_port_path%>"><i class="icon-plus-sign"></i> &nbsp;Tambah</a>
		<table class="row-view">
		<tr>
			<th>Nama</th>
			<th>Kota</th> 
			<th></th>
		</tr>

		<% @ports.each do |port| %>
		<% if port.deleted %>
			<tr class="deleted">
				<td><%= port.name %></td>
				<td><%= port.city %></td>
				<td class="right" width="60"></td>
			</tr>
			<% else %>
			<tr>
				<td><%= port.name %></td>
				<td><%= port.city %></td>
				<td class="right" width="60">
					<%= link_to '&#xf044;'.html_safe, edit_port_path(port), :class => "edit tipsy", :title => 'Edit' %> 
					<%= link_to '&#xf00d;'.html_safe, port, :class => "delete tipsy", :title => 'Hapus', :confirm => 'Apakah anda yakin?', :method => :delete if current_user.owner %>
				</td>
			</tr>
		<% end %>
		<% end %>

		</table>

	</div>

</div>