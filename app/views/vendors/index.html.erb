<%= render "shared/header" %>

<div id="nav">
	<%= render "shared/nav" %>
</div>

<div id="main">

	<div id="content-full">
		<h1>Master / Vendor / Index</h1>
		<a class="btn-txt right" href="<%=new_vendor_path%>"><i class="icon-plus-sign"></i> &nbsp;Tambah</a>
		<br class="clearfix" />
		<table class="row-view">
		<tr>
			<th>Name</th>
			<th></th>
		</tr>

		<% @vendors.each do |vendor| %>
		<% if vendor.deleted %>
			<tr class="deleted">
				<td><%= vendor.name %></td>
				<td class="right" width="60"></td>
			</tr>
			<% else %>
			<tr>
				<td><%= vendor.name %></td>
				<td class="right" width="60">
					<%= link_to '&#xf044;'.html_safe, edit_vendor_path(vendor), :class => "edit tipsy", :title => 'Edit' %> 
					<%= link_to '&#xf00d;'.html_safe, vendor, :class => "delete tipsy", :title => 'Hapus', :confirm => 'Apakah anda yakin?', :method => :delete if current_user.owner %>
				</td>
			</tr>
		<% end %>
		<% end %>

		</table>

	</div>

</div>