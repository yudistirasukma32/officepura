<%= render "shared/header" %>

<div id="nav">
		<%= render "shared/nav" %>
	</div>

<div id="main">

	<div id="content-full">
		<% if checkrole 'Master Jurusan' %>
			<a class="btn-txt right" href="<%=new_routetrain_path%>"><i class="icon-plus-sign"></i> &nbsp;Tambah Jurusan</a>
		<% end %>

		<h1>Master / <a href="<%=routetrains_path%>">Jurusan Kereta</a> / Index</h1>

		<br class="clearfix"/>

			<table class="tablesorter row-view tablesorterFilters">
			<thead>
			<tr>
					<th>Nama Jurusan</th>
					<th>Tipe</th>
					<th>ST. Asal</th>
					<th>ST. Tujuan</th>
					<th>Operator</th>
					<th>Harga</th>
					<th width="60" class="{sorter: false, filter: false} sorter-false">Aktif</th>
					<th width="60" class="{sorter: false, filter: false} sorter-false"></th>
				</tr>
				</thead>

				<tbody>
				<% @routes.each do |route| %>
				<tr>
					<td><% if checkrole 'Master Jurusan' %><%= link_to route.name, edit_routetrain_path(route) %> <% else %> <%= route.name %> <% end %></td>
					<td><%= route.container_type %></td>
					<td><%= route.origin_station.name %></td>
					<td><%= route.destination_station.name %></td>
					<td><%= route.operator.abbr rescue nil %></td>
					<td><%= route.price_per rescue nil %></td>
					<% if route.enabled %>
						<td><% if checkrole 'Master Jurusan'%> <%= link_to '&#xf058;'.html_safe, disable_routetrain_path(route), :class => 'enabled tipsy', :title => 'Non Aktifkan' %><% else %><%= link_to '&#xf058;'.html_safe, '', :class => 'enabled tipsy' %><% end %></td>
					<% else %>
						<td><% if checkrole 'Master Jurusan'%> <%= link_to '&#xf057;'.html_safe, enable_routetrain_path(route), :class => 'disabled tipsy', :title => 'Aktifkan' %><% else %><%= link_to '&#xf057;'.html_safe, '', :class => 'disabled tipsy' %><% end %></td>
					<% end %>
					<td class="right" width="60">
						<% if checkrole 'Master Jurusan' %>
							<%= link_to '&#xf044;'.html_safe, edit_routetrain_path(route), :class => "edit tipsy", :title => 'Edit' %>
						<% end %> 
						<%= link_to '&#xf00d;'.html_safe, route, :class => "delete tipsy", :title => 'Hapus', :confirm => 'Apakah anda yakin?', :method => :delete if current_user.owner %>
					</td>
				</tr>
				<% end %>	
				</tbody>
			</table>

		<br class="clearfix"/>

		<div class="actions">
			<% if checkrole 'Master Jurusan' %>
				<a class="btn-txt right" href="<%=new_routetrain_path%>"><i class="icon-plus-sign"></i> &nbsp;Tambah Jurusan</a>
			<% end %>
		</div>

	</div>

</div>