  </tr>
  <tr>
    <td>Tipe Kargo</td>
    <td>: <%= @invoice.event.cargo_type %></td>
  </tr>
  <tr>
    <td>Tipe Tangki</td>
    <td>: <%= @invoice.event.tanktype %></td>
  </tr>
  <tr>
    <td>Jumlah Rit</td>
    <td>: <%= @invoice.event.qty %></td>
  </tr>
</table>

