<%= render "shared/header" %>

<div id="nav">
	<%= render "shared/nav" %>
</div>

<div id="main">

	<div id="content-full">
		<h1>Mekanik</h1>
		<a class="btn-txt right" href="<%=new_mechanic_path%>"><i class="icon-plus-sign"></i> &nbsp;Tambah</a>
		<table class="row-view">
		<tr>
			<th>Name</th>
			<th>Kota</th>
			<th>Telp</th>
			<th></th>
		</tr>

		<% @mechanics.each do |mechanic| %>
		<% if mechanic.deleted %>
			<tr class="deleted">
				<td><%= mechanic.name %></td>
				<td><%= mechanic.city %></td>
				<td><%= mechanic.phone %></td>
				<td class="right" width="60"></td>
			</tr>
			<% else %>
			<tr>
				<td><%= mechanic.name %></td>
				<td><%= mechanic.city %></td>
				<td><%= mechanic.phone %></td>
				<td class="right" width="60">
					<%= link_to '&#xf044;'.html_safe, edit_mechanic_path(mechanic), :class => "edit tipsy", :title => 'Edit' %> 
					<%= link_to '&#xf00d;'.html_safe, mechanic, :class => "delete tipsy", :title => 'Hapus', :confirm => 'Apakah anda yakin?', :method => :delete if current_user.owner %>
				</td>
			</tr>
		<% end %>
		<% end %>

		</table>

	</div>

</div>