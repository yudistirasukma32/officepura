<style>
	.btn-styled {
		border-radius: 3px;
		border: 0;
		padding: 7px 10px;
		text-decoration: none;
		color: #fff;
		font-size: 13px;
		font-weight: 900;
		cursor: pointer;
		letter-spacing: 0.05em;
		background-color: #24748f !important;
		background-repeat: repeat-x;
		filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#2d95b7", endColorstr="#23748e");
		background-image: -khtml-gradient(linear, left top, left bottom, from(#2d95b7), to(#23748e));
		background-image: -moz-linear-gradient(top, #2d95b7, #23748e);
		background-image: -ms-linear-gradient(top, #2d95b7, #23748e);
		background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #2d95b7), color-stop(100%, #23748e));
		background-image: -webkit-linear-gradient(top, #2d95b7, #23748e);
		background-image: -o-linear-gradient(top, #2d95b7, #23748e);
		background-image: linear-gradient(#2d95b7, #23748e);
		border-color: #23748e #23748e #216c85;
		color: #fff !important;
		text-shadow: 0 -1px 0 rgb(0 0 0 / 16%);
		-webkit-font-smoothing: antialiased;
	}
	</style>

<%= render "shared/header" %>

<div id="nav">
	<%= render "shared/nav" %>
</div>

<div id="main">
	
	<div id="content-full">
		<h1>Surat Jalan / <a href="<%=receipttaxinvitems_path%>">Tanda Terima SJ</a> / Index</h1>
		
		<br class="clearfix" />

		<div id="filter">
			<form id="filterform" name="filterform" action="" method="get">
				<div class="field-row continue">
					<label for="startdate" class="middle">Tgl Awal</label>
					<input type="text" name="startdate" class="thalf date-picker left" value="<%=@startdate%>" />
					<label for="enddate" class="tiny">s/d</label>
					<input type="text" name="enddate" class="thalf date-picker left" value="<%=@enddate%>" />
					<div style="display: inline-block;">
						<input class="submit" type="submit"  class="" value="Filter" >
					</div>
				</div>
			</form>
		</div>

		<br class="clearfix" />

		<%= render "showtable" %>
		
		<br class="clearfix" />

	</div>

</div>

<!-- Begin::edit modal -->
<div id="myModal" class="modal">
  <div class="modal-content" style="height: 25%;">
		<span class="close">&times;</span>
		<form method="POST" id="update_receipttaxinv" action="<%= update_receipt_receipttaxinvitems_url %>">
			<h3 class="text-center" style="text-align: center; margin-top: unset; font-weight: bold;">Edit Tanda Terima SJ #<span id="receipt_long_id"></span></h3>

			<div class="" style="padding-bottom:0px; display: flex; margin-top: 10px;">
				<div style="width: 30%; margin-top: 5px; margin-bottom: 10px;">
					<label style="color:#000; font-weight:700;">Tanggal</label>
				</div>
				<div style="width: 50%; display: flex; align-items: center;">
					<input type="text" name="created_at" class="date-picker" id="created_at" autocomplete="off">
				</div>
			</div>

			<div class="" style="padding-bottom:0px; display: flex; margin-top: 10px;">
				<div style="width: 30%; margin-top: 5px; margin-bottom: 10px;">
					<label style="color:#000; font-weight:700;">Tanggal Penyerahan</label>
				</div>
				<div style="width: 50%; display: flex; align-items: center;">
					<input type="text" name="printdate" class="date-picker" id="printdate" autocomplete="off">
				</div>
			</div>

			<input type="hidden" name="id" id="receipt_id">

			<div class="" style="padding-bottom:0px; text-align: right; width: 100%; margin-top: 1rem;">
				<input type="submit" value="Simpan" class="btn btn-styled"/>
			</div>
		</form>
  </div>
</div>
<!-- End::edit modal -->