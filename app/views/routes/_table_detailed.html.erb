<% 
	page = params[:page].blank? ? 1 : params[:page].to_i 
	if @total_page > 6
		start_page = page - 3
		start_page = 2 if start_page <= 1
		end_page = page + 4
		end_page = @total_page if end_page >= @total_page
		max_page = @total_page	
		first_page = 1

	else
		start_page = 1
		end_page = @total_page + 1
	end
%>

<style>
.disabled {
	pointer-events: auto !Important;
}
</style>

<table class="row-view report-view tablesorter tablesorterFilters">
    <thead>
        <tr>
            <th class="{sorter:true, filter: true}" >Nama Jurusan</th>
            <th class="{sorter:true, filter: true}" >Nama Pelanggan</th>
            <th class="{sorter:true, filter: true}" width="80">Muatan</th>
            <th class="{sorter:true, filter: true}" width="80">Kantor</th>
            <th class="{sorter:true, filter: true}" width="80">Kota Muat</th>
            <th class="{sorter:true, filter: true}" width="80">Kota Bongkar</th>
            <th class="{sorter:true, filter: true}" width="80">Jarak (KM)</th>
            <th class="{sorter:true, filter: true}" width="80">Solar (Lt)</th>
            <th class="{sorter: false, filter: false}">Um Supir</th>
            <th class="{sorter: false, filter: false}">Um Kernet</th> 
            <th class="{sorter: false, filter: false}">GM Approved</th>
            <th class="{sorter: false, filter: false}">Aktif</th>
            <th width="60" class="{sorter: false, filter: false}"></th>
        </tr>
    </thead>

    <tbody class="tablesorter-sort">
    <%
    @routes.each do |route| 
    route_allowance = route.allowances.where("driver_trip > money(0) or helper_trip > money(0) or gas_trip > (0) or misc_allowance > money(0)").first rescue nil
    %>
    
    <tr>
        <td><% if checkrole 'Master Jurusan, Admin Marketing, Management Jurusan' %><%= link_to route.name, edit_route_path(route) %> <% else %> <%= route.name %> <% end %></td>
        <td><%= route.customer.name if !route.customer.nil? %></td>
        <td><%= route.commodity.name if !route.commodity.nil? %></td>
        <td><%= route.office.abbr if !route.office.nil? %></td>
        <td><%= safe_join([route.load_city, route.load_province].compact, "<br/>".html_safe) %></td>
        <td><%= safe_join([route.unload_city, route.unload_province].compact, "<br/>".html_safe) %></td>
        <td align='right' style="padding-right: 1rem;">
        
        <% if route.distance.nil? ||route.distance == 0 %>
            <span style="text-decoration: underline;">
                <% gas_trip = (route_allowance.try(:gas_trip).to_f || 0.0) %>
                <% if route.name.downcase.include?('kosongan') %>
                <%= (gas_trip * 3).round().to_i %>
                <% else %>
                <%= (gas_trip * 2.3).round().to_i %>
                <% end %>
            </span>
        <% else %>
            <%= route.distance.round(2).to_i %>
        <% end %>
        
        </td>
        <td align='right'><%= route_allowance.gas_trip rescue 0%></td>
        <td align='right'><%= to_currency(route_allowance.driver_trip) rescue 0 %></td>
        <td align='right'><%= to_currency(route_allowance.helper_trip) rescue 0 %></td>
        <td class="center">
        <% if route.approved %>
            <%= link_to '&#xf058;'.html_safe, '#', :class => 'enabled tipsy', :title => 'Approved GM' %>
        <% else %>
            <%= link_to '&#xf057;'.html_safe, '#', :class => 'disabled tipsy', :title => 'Waiting GM' %>
        <% end %>
        </td>
        <% if route.enabled %>
            <td><% if checkrole 'Master Jurusan, Admin Marketing, Management Jurusan'%> <%= link_to '&#xf058;'.html_safe, disable_route_path(route), :class => 'enabled tipsy', :title => 'Non Aktifkan' %><% else %><%= link_to '&#xf058;'.html_safe, '', :class => 'enabled tipsy' if checkrole 'Admin Marketing, Admin Jurusan, General Manager' %><% end %></td>
        <% else %>
            <td><% if checkrole 'Master Jurusan, Admin Marketing, Management Jurusan'%> <%= link_to '&#xf057;'.html_safe, enable_route_path(route), :class => 'disabled tipsy', :title => 'Aktifkan' %><% else %><%= link_to '&#xf057;'.html_safe, '', :class => 'disabled tipsy' if checkrole 'Admin Marketing, Admin Jurusan, General Manager' %><% end %></td>
        <% end %>

        <td class="right">
            <% if checkrole 'Master Jurusan, Admin Marketing, Management Jurusan' %>
                <%= link_to '&#xf044;'.html_safe, edit_route_path(route, :operational => true), :class => "edit tipsy", :title => 'Edit' %>
            <% end %> 
            <%= link_to '&#xf00d;'.html_safe, route, :class => "delete tipsy", :title => 'Hapus', :confirm => 'Apakah anda yakin?', :method => :delete if current_user.owner %>
        </td>
    </tr>
    <% end %>
    </tbody>	

</table>

<% 
page = params[:page].blank? ? 1 : params[:page].to_i 
if @total_page > 6
    start_page = page - 3
    start_page = 2 if start_page <= 1
    end_page = page + 4
    end_page = @total_page if end_page >= @total_page
    max_page = @total_page	
    first_page = 1

else
    start_page = 1
    end_page = @total_page + 1
end

%>
<div class="pagination">

<% if page > 1 %>
    <a data-page="<%= page - 1 %>" href="<%= routes_url(office_id: params[:office_id], page: page - 1) %>" class="pagination-link">&laquo;</a>
<% end %>

<% if first_page.present? %>
    <a data-page="<%= first_page %>" href="<%= routes_url(office_id: params[:office_id], page: first_page) %>" class="pagination-link <%= page == first_page ? "active" : "" %>"><%= first_page %></a>
<% end %>

<% if page > 5 %>
    <a href="#" class="pagination-link">...</a>
<% end %>

<% until start_page == end_page  do %>
    <a data-page="<%= start_page %>" href="<%= routes_url(office_id: params[:office_id], page: start_page) %>" class="pagination-link <%= page == start_page ? "active" : "" %>"><%= start_page %></a>
    <% start_page += 1 %>
<% end %>

<% if max_page.present? %>
    <% if page < max_page - 4 %>
        <a onclick="" href="#" class="">...</a>
    <% end %>
<a data-page="<%= max_page %>" href="<%= routes_url(office_id: params[:office_id], page: max_page) %>" class="pagination-link <%= page == max_page ? "active" : "" %>"><%= max_page %></a>
<% end %>

<% if page < @total_page %>
    <a data-page="<%= page + 1 %>" href="<%= routes_url(office_id: params[:office_id], page: page + 1) %>" class="pagination-link">&raquo;</a>
<% end %>
</div>