<table class="row-view">
	<tr>
		<th width="50">BKK</th>
		<th width="80">Tanggal</th>
		<th>Keterangan</th>
		<th width="110" class="right">Total</th>
		<th width="60"></th>
	</tr>
	<% if @receiptpremis %>
	<% @receiptpremis.each do |receiptpremi| %>
	<tr>
		<td><%= zeropad(receiptpremi.invoice_id) %></td>
		<td><%= receiptpremi.date.strftime('%d-%m-%Y') %></td>
		<td><%= receiptpremi.bonusreceipt.quantity%> Rit: <%= receiptpremi.invoice.route.name%></td>
		<td class="red" align="right"><%=to_currency(receiptpremi.total)%></td>
		<td class="right">
			<%= link_to '&#xf00d;'.html_safe, receiptpremi, :class => "delete tipsy", :title => 'Hapus', :confirm => 'Apakah anda yakin?', :method => :delete %>
		</td>		
	</tr>
	<% end %>	
	<% end %>

</table>