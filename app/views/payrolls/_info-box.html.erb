<div class="info-box payroll">
  <h3>Estimasi Kas Keluar</h3>

  <table class="row-view payroll-view">
    <tr>
      <th colspan="3">PENERIMAAN</th>
      <th width="100" class="right">Total</th>
    </tr>

    <tr><td colspan="4">Hari Normal</td></tr>

    <tr>
      <td class="right" id="lblNonHolidays"><%= @payroll.non_holidays || 0 %></td>
      <td>*</td>
      <td class="right" id="lblNonHolidaysFare"><%= to_currency(@payroll.non_holidays_fare)%></td>
      <td class="right green" id="lblNonHolidaysPayment"><%= to_currency(@payroll.non_holidays_payment) %></td>
    </tr>

    <tr><td colspan="5">Hari Nasional</td></tr>

    <tr>
      <td class="right" id="lblHolidays"><%= @payroll.holidays || 0 %></td>
      <td>*</td>
      <td class="right" id="lblHolidaysFare"><%= to_currency(@payroll.holidays_fare)%></td>
      <td class="right green" id="lblHolidaysPayment"><%= to_currency(@payroll.holidays_payment) %></td>
    </tr>

    <tr></tr>

    <tr>
      <td colspan="3">Ambil Tabungan</td>
      <td class="right green" id="lblSavingReduction"><%= to_currency(@payroll.saving_reduction)%></td>
    </tr>

    <tr>
      <td colspan="3">Premi Hadir</td>
      <td class="right green" id="lblBonus"><%= to_currency(@payroll.bonus)%></td>
    </tr>

    <tr class="row-helper">
      <td colspan="3">Uang Hadir Kernet</td>
      <td class="right green" id="lblHelperFee"><%= to_currency(@payroll.helper_fee)%></td>
    </tr>

    <tr>
      <td colspan="3"><strong>TOTAL</strong></td>
      <td class="right green" id="lblTotalPayment"><%= to_currency(@payroll.holidays_payment.to_f + @payroll.non_holidays_payment.to_f + @payroll.saving_reduction.to_f + @payroll.bonus.to_f) %></td>
    </tr>

    <tr><td colspan="4"  style="font-size:13px;">Revisi Tabungan (<span id="lblMasterSaving"><%= to_currency(@payroll.master_saving || 0) %></span> - <span id="lblSavingReduction2"><%= to_currency(@payroll.saving_reduction)%></span> = <span id="lblSavingRed"><%= to_currency(@payroll.master_saving.to_f - @payroll.saving_reduction.to_f) %></span>)</td></tr>

    <tr><td colspan="4">&nbsp;</td></tr>

     <tr><th colspan="4">POTONGAN</th></tr>
    <tr>
      <th width="115" class="right">JML</th>
      <th width="5"></th>
      <th width="115" class="right">POT</th>
      <th width="115" class="right">SISA</th>
    </tr>

    <tr><td colspan="4">Klaim Susut</td></tr>

    <tr>
      <td colspan="2" class="right" id="lblMasterWeightLoss"><%= to_currency(@payroll.master_weight_loss) %></td>
      <td class="right red" id="lblPayrollWeightLoss"><%= to_currency(@payroll.weight_loss) %></td>
      <td class="right" id="lblTotalWeightLoss" ><%= to_currency(@payroll.master_weight_loss.to_f - @payroll.weight_loss.to_f) %></td>
    </tr>

    <tr><td colspan="4">Klaim Kecelakaan</td></tr>

    <tr>
      <td colspan="2" class="right" id="lblMasterAccident"><%= to_currency(@payroll.master_accident) %></td>
      <td class="right red" id="lblPayrollAccident"><%= to_currency(@payroll.accident) %></td>
      <td class="right" id="lblTotalAccident"><%= to_currency(@payroll.master_accident.to_f - @payroll.accident.to_f) %></td>
    </tr>

    <tr><td colspan="4">Klaim Onderdil</td></tr>

    <tr>
      <td colspan="2" class="right" id="lblMasterSparepart"><%= to_currency(@payroll.master_sparepart) %></td>
      <td class="right red" id="lblPayrollSparepart"><%= to_currency(@payroll.sparepart) %></td>
      <td class="right" id="lblTotalSparepart"><%= to_currency(@payroll.master_sparepart.to_f - @payroll.sparepart.to_f) %></td>
    </tr>

    <tr><td colspan="4">Pinjaman</td></tr>

    <tr>
      <td colspan="2" class="right" id="lblMasterBon"><%= to_currency(@payroll.master_bon.to_f) %></td>
      <td class="right red" id="lblPayrollBon"><%= to_currency(@payroll.bon.to_f) %></td>
      <td class="right" id="lblTotalBon"><%= to_currency(@payroll.master_bon.to_f - @payroll.bon.to_f) %></td>
    </tr>

    <tr><td colspan="4">Gantungan Sangu</td></tr>

    <tr>
      <td colspan="2" class="right">-</td>
      <td class="right red" id="lblPayrollAllowance"><%= to_currency(@payroll.allowance) %></td>
      <td class="right">-</td>
    </tr>

    <tr><td colspan="4">Menabung</td></tr>

    <tr>
      <td colspan="2" class="right" id="lblSavingRed2"><%= to_currency(@payroll.master_saving.to_f - @payroll.saving_reduction.to_f) %></td>
      <td class="right red" id="lblPayrollSaving"><%= to_currency(@payroll.saving) %></td>
      <td class="right" id="lblTotalSaving"><%= to_currency(@payroll.master_saving.to_f - @payroll.saving_reduction.to_f + @payroll.saving.to_f)%></td>
    </tr>

    <tr class="total-row">
      <td colspan="2" ><strong>TOTAL</strong></td>
      <td class="right red" id="lblPayrollExpenseTotal"><%= to_currency(@payroll.saving.to_f + @payroll.weight_loss.to_f + @payroll.accident.to_f + @payroll.sparepart.to_f + @payroll.bon.to_f + @payroll.allowance.to_f ) %></td>
      <td></td>
      <td></td>
    </tr>

    <tr class="total-row">
      <td colspan="3"><strong>DITERIMA</strong></td>
      <td class="right <%if @payroll.total >= 0 %> green <% else %> red <% end %>" id="lblPayrollTotal"><%= to_currency(@payroll.total.abs)%></td>
    </tr>
  </table>

 </div>