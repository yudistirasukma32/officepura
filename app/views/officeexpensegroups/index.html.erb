<%= render "shared/header" %>

<div id="nav">
	<%= render "shared/nav" %>
</div>

<div id="main">
	
	<div id="content-full">
		<a class="btn print" href="<%=new_officeexpensegroup_path%>"><i class="icon-plus-sign"></i> &nbsp;Tambah</a>
		<h1>Master / <a href="<%=officeexpensegroups_path%>">Grup Kas</a> / Index</h1>

		<br class="clearfix" />

			<table class="row-view">
				<tr>
					<th>Nama</th>
					<th>Aktif</th>
					<th width="60"></th>
				</tr>
				<% @officeexpensegroups.each do |officeexpensegroup| %>
				<tr class="subheading" />
					<th colspan="7" style="color:#000;"><%= officeexpensegroup.name %></th>
				</tr>

				<% officeexpensegroup.officeexpensegroups.order(:name).each do |group| %>
				<tr>
					<td><%= link_to group.name, edit_officeexpensegroup_path(group) %></td>
					<% if group.enabled %>
					<td><%= link_to '&#xf058;'.html_safe, disable_officeexpensegroup_path(group), :class => 'enabled tipsy', :title => 'Non Aktifkan' %></td>
					<% else %>
					<td><%= link_to '&#xf057;'.html_safe, enable_officeexpensegroup_path(group), :class => 'disabled tipsy', :title => 'Aktifkan' %></td>
					<% end %>
					<td class="right" width="60">
						<%= link_to '&#xf044;'.html_safe, edit_officeexpensegroup_path(group), :class => "edit tipsy", :title => 'Edit' %> 
						<%= link_to '&#xf00d;'.html_safe, group, :class => "delete tipsy", :title => 'Hapus', :confirm => 'Apakah anda yakin?', :method => :delete %>
					</td>
				</tr>
				<% end %> 
				<% end %>	

			</table>

		<br class="clearfix" />
		<div class="actions">
			<a class="btn-txt right" href="<%=new_officeexpensegroup_path%>"><i class="icon-plus-sign"></i> &nbsp;Tambah</a>
		</div>
	</div>

</div>