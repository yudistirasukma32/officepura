<%= render "shared/header" %>

<div id="nav">
	<%= render "shared/nav" %>
</div>

<div id="main">

	<div id="content-full">
		<h1>Kapal</h1>
		<a class="btn-txt right" href="<%=new_ship_path%>"><i class="icon-plus-sign"></i> &nbsp;Tambah</a>
		<table class="row-view">
		<tr>
			<th>Name</th>
			<th>Nomor Kapal</th>
			<th>IMO</th>
			<th>Tahun</th>
			<th></th>
		</tr>

		<% @ships.each do |ship| %>
		<% if ship.deleted %>
			<tr class="deleted">
				<td><%= ship.name %></td>
				<td><%= ship.number %></td>
				<td><%= ship.imo %></td>
				<td><%= ship.year_of_build %></td>
				<td class="right" width="60"></td>
			</tr>
			<% else %>
			<tr>
				<td><%= ship.name %></td>
				<td><%= ship.number %></td>
				<td><%= ship.imo %></td> 
				<td><%= ship.year_of_build %></td>
				<td class="right" width="60">
					<%= link_to '&#xf044;'.html_safe, edit_ship_path(ship), :class => "edit tipsy", :title => 'Edit' %> 
					<%= link_to '&#xf00d;'.html_safe, ship, :class => "delete tipsy", :title => 'Hapus', :confirm => 'Apakah anda yakin?', :method => :delete if current_user.owner %>
				</td>
			</tr>
		<% end %>
		<% end %>

		</table>

	</div>

</div>