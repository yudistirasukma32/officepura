	</div>

	<div class="field-row">
		<%= f.label :imo, "Nomor IMO" %>
		<%= f.text_field :imo %>
	</div>

	<div class="field-row">
		<%= f.label :builder, "Builder" %>
		<%= f.text_field :builder %>
	</div>

	<div class="field-row">
		<%= f.label :year_of_build, "Tahun Pembuatan" %>
		<%= f.text_field :year_of_build %>
	</div>

	<div class="field-row">
		<%= f.label :description, "Deskripsi" %>
		<%= f.text_area :description, :class => 'half' %>
	</div>

	<div class="actions">
	<%= f.submit %>
	</div>

