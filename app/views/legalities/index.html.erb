<%= render "shared/header" %>

<div id="nav">
	<%= render "shared/nav" %>
</div>

<div id="main">

	<div id="content-full">
		<h1>Legalities / Documents</h1>
		<a class="btn-txt right" href="<%=new_legality_path%>"><i class="icon-plus-sign"></i> &nbsp;Tambah</a>
		<table class="row-view">
		<tr>
			<th>Name</th>
			<th>Number</th>
			<th>Description</th>
			<th>Validity</th>
			<th></th>
		</tr>

		<% @legalities.each do |legality| %>
		<% if legality.deleted %>
			<tr class="deleted">
				<td><%= legality.name %></td>
				<td><%= legality.number %></td>
				<td><%= legality.description %></td>
				<td><%=legality.validity.strftime('%d-%m-%Y')%></td>
<!--
				<td><%= link_to 'Show', legality %></td>
				<td><%= link_to 'Edit', edit_legality_path(legality) %></td>
				<td><%= link_to 'Destroy', legality, method: :delete, data: { confirm: 'Are you sure?' } %></td>
-->
				<td class="right" width="60"></td>
			</tr>
			<% else %>
			<tr>
				<td><%= legality.name %></td>
				<td><%= legality.number %></td>
				<td><%= legality.description %></td>
				<td><%=legality.validity.strftime('%d-%m-%Y')%></td>
<!--
				<td><%= link_to 'Show', legality %></td>
				<td><%= link_to 'Edit', edit_legality_path(legality) %></td>
				<td><%= link_to 'Destroy', legality, method: :delete, data: { confirm: 'Are you sure?' } %></td>
-->
				<td class="right" width="60">
					<%= link_to '&#xf044;'.html_safe, edit_legality_path(legality), :class => "edit tipsy", :title => 'Edit' %> 
					<%= link_to '&#xf00d;'.html_safe, legality, :class => "delete tipsy", :title => 'Hapus', :confirm => 'Apakah anda yakin?', :method => :delete if current_user.owner %>
				</td>
			</tr>
		<% end %>
		<% end %>

		</table>

	</div>

</div>